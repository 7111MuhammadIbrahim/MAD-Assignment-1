<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="8dp">

    <!-- Display -->
    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#000000"
        android:gravity="end|bottom"
        android:padding="16dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold" />

    <!-- Buttons Grid -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="6"
        android:layout_gravity="bottom"
        android:layout_marginTop="8dp">

        <!-- Row 1 -->
        <Button android:text="AC" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#FF9500" android:textColor="#FFFFFF" android:textSize="20sp"/>
        <Button android:text="√" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#505050" android:textColor="#FFFFFF" android:textSize="20sp"/>
        <Button android:text="x²" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#505050" android:textColor="#FFFFFF" android:textSize="20sp"/>
        <Button android:text="÷" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#FF9500" android:textColor="#FFFFFF" android:textSize="20sp"/>

        <!-- Row 2 -->
        <Button android:text="7" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#1C1C1C" android:textColor="#FFFFFF" android:textSize="20sp"/>
        <Button android:text="8" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#1C1C1C" android:textColor="#FFFFFF" android:textSize="20sp"/>
        <Button android:text="9" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#1C1C1C" android:textColor="#FFFFFF" android:textSize="20sp"/>
        <Button android:text="×" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#FF9500" android:textColor="#FFFFFF" android:textSize="20sp"/>

        <!-- Row 3 -->
        <Button android:text="4" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#1C1C1C" android:textColor="#FFFFFF" android:textSize="20sp"/>
        <Button android:text="5" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#1C1C1C" android:textColor="#FFFFFF" android:textSize="20sp"/>
        <Button android:text="6" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#1C1C1C" android:textColor="#FFFFFF" android:textSize="20sp"/>
        <Button android:text="−" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#FF9500" android:textColor="#FFFFFF" android:textSize="20sp"/>

        <!-- Row 4 -->
        <Button android:text="1" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#1C1C1C" android:textColor="#FFFFFF" android:textSize="20sp"/>
        <Button android:text="2" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#1C1C1C" android:textColor="#FFFFFF" android:textSize="20sp"/>
        <Button android:text="3" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#1C1C1C" android:textColor="#FFFFFF" android:textSize="20sp"/>
        <Button android:text="+" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#FF9500" android:textColor="#FFFFFF" android:textSize="20sp"/>

        <!-- Row 5 -->
        <Button android:text="0" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#1C1C1C" android:textColor="#FFFFFF" android:textSize="20sp"/>
        <Button android:text="." android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#1C1C1C" android:textColor="#FFFFFF" android:textSize="20sp"/>
        <Button android:text="=" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#FF9500" android:textColor="#FFFFFF" android:textSize="20sp"/>
        <Button android:text="%" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#505050" android:textColor="#FFFFFF" android:textSize="20sp"/>

        <!-- Row 6 -->
        <Button android:text="sin" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#505050" android:textColor="#FFFFFF" android:textSize="20sp"/>
        <Button android:text="cos" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#505050" android:textColor="#FFFFFF" android:textSize="20sp"/>
        <Button android:text="tan" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#505050" android:textColor="#FFFFFF" android:textSize="20sp"/>
        <Button android:text="ln" android:layout_width="0dp" android:layout_height="80dp"
            android:layout_columnWeight="1" android:background="#505050" android:textColor="#FFFFFF" android:textSize="20sp"/>
    </GridLayout>
</LinearLayout>
